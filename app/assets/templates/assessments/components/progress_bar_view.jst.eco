<div class="progressbar">
  <% for i in [0...@numOfStages]: %>
    <% firstOrLast = "" %>
    <% firstOrLast = "first" if i is 0 %>
    <% firstOrLast = "last" if i is @numOfStages - 1 %>
    <div id="progress_stage<%= i %>" class="section <%= firstOrLast %>" style="width:<%= @width%>%;"> </div>
  <% end %>
</div>