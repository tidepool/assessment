	<!-- Header
	=================== -->

	<div id="header">
		<div class="container">
			<div class="row">
				<div id="progressbarcontainer">
				</div>
        <h1>TidePool</h1>
				<div class="user">
					<% if current_user && !current_user.guest %>
  					<p>Hello, 
    					<%= current_user.name %>, 
    					<%= link_to "Log out", logout_path, :class => 'login_logout' %>
  					</p>
  				<% else %>
  						<%= link_to "Log in", login_path, :class => 'login_logout' %>
  				<% end %>
				</div>
        <%= render 'layouts/messages' %>

			</div>
		</div>
	</div>
