<%= render 'dashboard/layouts/header' %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2"></div>
    <div class="span7">
      <h1>Awareness is the beginning of improvement</h1>
    </div>
    <div class="span2">
      <button id="getStarted" class="btn btn-large btn-success">Get Started</button>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span5">
      <img src="/assets/landing_page/left.jpeg"/>
    </div>
    <div class="span5">
      <img src="/assets/landing_page/right.jpeg"/>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span1">
      <img src="/assets/landing_page/diego.jpg"/>
    </div>
    <div class="span4">
      <blockquote>
        <p>
          “One of the most exiting ideas I've seen in a while!”
        </p>
        <small>
          Diego Berdakin
        </small>
      </blockquote>
    </div>
    <div class="span1">
      <img src="/assets/landing_page/heather.jpg"/>
    </div>
    <div class="span4">
      <blockquote>
        <p>
          “TidePool has such a smart team tackling a really interesting market. This team is on the money.”
        </p>
        <small>
          Heather Gilchrist
        </small>
      </blockquote>
    </div>
  </div>

  <%= render 'dashboard/layouts/footer' %>
</div>

<%= content_for :javascript do %>
  <%= javascript_include_tag "dashboard/application" %>
  <script>
    $(document).ready(function(){
      $("#getStarted").click(function(){ window.location.href = '/start/2';})
    });
  </script>
<% end %>

<%= content_for :stylesheet do %>
  <!-- start: Mobile Specific -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- end: Mobile Specific -->

  <!-- start: CSS -->
  <%= stylesheet_link_tag "dashboard/application" %>
  <%= stylesheet_link_tag "dashboard/application-responsive" %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css'>
  <!-- end: CSS -->

  <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <link id="ie-style" href="/assets/dashboard/ie.css" rel="stylesheet">
  <![endif]-->

  <!--[if IE 9]>
  <link id="ie9style" href="/assets/dashboard/ie9.css" rel="stylesheet">
  <![endif]-->


<% end %>